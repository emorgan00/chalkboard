{
    "colors": {

        "background": "#FFFFFF",

        "1": "#000000",
        "2": "#3B60FF",
        "3": "#DB2424",
        "4": "#15922D",
        "5": "#0EC4B9",
        "6": "#8B35A0",
        "7": "#EB9110",
        "8": "#000000",
        "9": "#000000",
        "0": "#000000"
    },

    "controls": {

        "quit": "escape",
        "fullscreen": "ctrl+f",

        // modes
        "freedraw": "f",
        "erase": "e",
        "text": "t",

        "undo": "ctrl+z",
        "redo": "ctrl+shift+z",

        // change brush size, eraser size, text size, etc.
        "increase-size": "=",
        "decrease-size": "-",

        "color-1": "1",
        "color-2": "2",
        "color-3": "3",
        "color-4": "4",
        "color-5": "5",
        "color-6": "6",
        "color-7": "7",
        "color-8": "8",
        "color-9": "9",
        "color-0": "0",

        // note that if you switch colors and then reload the config file,
        // things you have already drawn will remain the same color.
        "reload-config": "ctrl+r",

        // text mode specific options
        // "toggle-bold": "ctrl+b",
        // "toggle-italic": "ctrl+i",
        // "toggle-underline": "ctrl+u",
        "write-newline": "shift+return",
        "commit-text": "return",
        "discard-text": "escape"

    },

    // draw lines with circles + polygons rather than
    // pygame's builtin line drawing function.
    // if this is active, turn on line compression to avoid lag
    "fancy-lines": true,

    // smooth out lines as they are drawn.
    // higher degree = more smoothing
    "smooth-lines": true,
    "smooth-lines-degree": 3,

    // compress lines as they are drawn (with RDP)
    // higher epsilon = more aggressive compression
    "compress-lines": true,
    "compress-lines-epsilon": 0.12,

    // width in pixels when at default zoom level
    "default-line-thickness": 5,
    "default-erase-thickness": 125,

    // factor to multiply by when zooming in/out or
    // changing line thickness. should be greater than 1.0
    "zoom-ratio": 1.1,

    // [width, height] in pixels
    "default-window-size": [800, 500],
    "fullscreen-window-size": [1500, 1000],

    // toggle pygame's NOFRAME option
    // (may not have an effect on all systems)
    "window-frame": true,

    // when set to true, pressing the hotkey for a mode you are already on
    // will revert you back to the previous mode before the current one.
    // when set to false, nothing will happen.
    "revert-mode": true,

    // text mode font options
    "default-font-size": 24,

    // if false, then font-name font will be chosen from system fonts
    // this may not work on some systems, in which case you can set to
    // true and specify a file in font-path
    "custom-font": false,
    "font-name": "consolas",
    "font-path": "path/to/font.ttf",

    // if true, then when you click to create a new text object, mouse
    // input will then be ignored.
    // if false, the new text object will continue to move around with the mouse.
    "freeze-text": false
}